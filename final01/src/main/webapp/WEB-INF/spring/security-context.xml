<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:security="http://www.springframework.org/schema/security"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security-5.2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<security:http pattern="/css/**" security="none"/>
	<security:http pattern="/img/**" security="none"/>
	<security:http pattern="/js/**" security="none"/>
	
	
	<security:http>
		<security:intercept-url pattern="/home.jsp" access="permitAll()"/>
		<security:intercept-url pattern="/admin/**" access="hasAuthority('A')"/>
		<security:intercept-url pattern="/**" access="isAuthenticated()"/>
		<security:form-login default-target-url="/home.jsp"/>
		<security:logout logout-url="/logout" logout-success-url="/home.jsp"/>
		<security:csrf disabled="true"/>
	</security:http>
	
	<bean id="CustomUserDetailsService" class="co.yedam.app.emp.service.Impl.CustomUserDetailsService"/>
	<!--장서영  -->
	<security:authentication-manager>
		<security:authentication-provider>
			<security:user-service> 
				<security:user name="user" password="{noop}1234" authorities="ROLE_USER" />
				<security:user name="admin" password="{noop}1234" authorities="ROLE_ADMIN" />
			</security:user-service>
		</security:authentication-provider>
	</security:authentication-manager>

</beans>
